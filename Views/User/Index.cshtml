@model List<MyMvcApp.Models.User>

@{
    ViewData["Title"] = "User Index";
}

<h1>User Index</h1>

<form asp-action="Search" method="get" class="form-inline mb-3">
    <input type="text" name="query" placeholder="Search users..." class="form-control mr-2" />
    <button type="submit" class="btn btn-primary mr-2">Search</button>
    <a asp-action="Index" class="btn btn-secondary">Reset Search</a>
</form>

<a asp-action="Create" class="btn btn-primary mb-3">Create User</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model[0].Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>